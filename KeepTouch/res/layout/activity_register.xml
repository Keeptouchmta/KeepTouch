<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.keeptouch.keeptouch.login.RegisterActivity"
    tools:ignore="MergeRootFrame"
    android:clickable="true">

    <EditText
        android:id="@+id/textPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_below="@+id/textEmailAddress"
        android:layout_alignLeft="@+id/textEmailAddress"
        android:layout_alignStart="@+id/textEmailAddress" />

    <EditText
        android:id="@+id/textEmailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="115dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="tzlilg21@gmail.com"
        android:layout_marginLeft="30dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/TextPassword" />

    <TextView
        android:id="@+id/textEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="58dp"
        android:text="Email"
        android:textSize="20dp"
        android:layout_alignTop="@+id/textEmailAddress"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/TextPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="20dp"
        android:layout_alignTop="@+id/textPassword"
        android:layout_alignLeft="@+id/textEmail"
        android:layout_alignStart="@+id/textEmail" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Re-type\npassword"
        android:id="@+id/textViewReTypePassword"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/TextPassword"
        android:layout_alignStart="@+id/TextPassword"
        android:textSize="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/textReTypePassword"
        android:layout_alignBottom="@+id/textViewReTypePassword"
        android:layout_alignLeft="@+id/textPassword"
        android:layout_alignStart="@+id/textPassword" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonRegisterWithFacebok"
        android:focusableInTouchMode="false"
        android:background="@drawable/btn_facebook_signup"
        android:layout_below="@+id/buttonRegister"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue "
        android:id="@+id/buttonRegister"
        android:layout_below="@+id/textReTypePassword"
        android:layout_alignRight="@+id/imageButtonRegisterWithFacebok"
        android:layout_alignEnd="@+id/imageButtonRegisterWithFacebok"
        android:textStyle="bold"
        android:textColor="#fafbff" />

</RelativeLayout>