<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.keeptouch.keeptouch.login.LoginActivity"
    tools:ignore="MergeRootFrame"
    android:clickable="true">

    <EditText
        android:id="@+id/textPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_below="@+id/textEmailAddress"
        android:layout_alignLeft="@+id/textEmailAddress"
        android:layout_alignStart="@+id/textEmailAddress" />

    <EditText
        android:id="@+id/textEmailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="115dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="tzlilg21@gmail.com"
        android:layout_marginLeft="30dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/TextPassword" />

    <TextView
        android:id="@+id/textEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="58dp"
        android:text="Email"
        android:textSize="20dp"
        android:layout_alignTop="@+id/textEmailAddress"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/TextPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="20dp"
        android:layout_alignTop="@+id/textPassword"
        android:layout_alignLeft="@+id/textEmail"
        android:layout_alignStart="@+id/textEmail" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonLoginWithFacebok"
        android:maxWidth="10dp"
        android:background="@drawable/active_600"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/imageButtonLogin"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Sign Up"
        android:id="@+id/textSignUp"
        android:layout_below="@+id/imageButtonLoginWithFacebok"
        android:layout_alignRight="@+id/textPassword"
        android:layout_alignEnd="@+id/textPassword"
        android:layout_marginTop="37dp"
        android:textSize="15dp"
        android:clickable="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonLogin"
        android:clickable="true"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/TextPassword"
        android:layout_alignStart="@+id/TextPassword"
        android:layout_alignRight="@+id/TextPassword"
        android:layout_alignEnd="@+id/TextPassword" />

</RelativeLayout>

