<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_window_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    tools:context=".ProfileScreen"
    android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
    >
    
    <LinearLayout
        android:id="@+id/linearLayoutProfileDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            >
            
    <ImageView
        android:id="@+id/imgProfileImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/sash" />
    
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" 
            android:layout_marginLeft="15dp"
            >
            
        <TextView
	            android:id="@+id/txtUserName"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="User Name" />
	
	        <TextView
	            android:id="@+id/txtLocation"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="5dp" 
	            android:text="User Location" />
            
        </LinearLayout>
     </LinearLayout>    
        
    <TextView
        android:id="@+id/txtGroups"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp" 
        android:layout_below="@+id/linearLayoutProfileDesc"
        android:text="Groups :" />

        <LinearLayout
	        android:id="@+id/linearLayoutGroups"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/txtGroups"
	        android:layout_below="@+id/txtGroups"
	        android:layout_marginTop="15dp" 
	        android:orientation="horizontal"
	        >

	    </LinearLayout>
	    
        <ImageButton
	        android:id="@+id/btnPlusGroups"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/linearLayoutGroups"
	        android:layout_toRightOf="@+id/linearLayoutGroups"
	        android:background="@null"
	        android:src="@drawable/btn_plus"
	        android:layout_marginLeft="15dp"
	         />
        
        <TextView
        android:id="@+id/txtLatestEvents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp" 
        android:layout_below="@+id/linearLayoutGroups"
        android:text="Latest Events:" />
        
		<LinearLayout
	        android:id="@+id/linearLayoutLatestEvents"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/txtLatestEvents"
	        android:layout_below="@+id/txtLatestEvents"
	        android:layout_marginTop="15dp" 
	        android:orientation="horizontal"
	        >

	    </LinearLayout>
	    
        <ImageButton
	        android:id="@+id/btnPlusLatestEvents"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/linearLayoutLatestEvents"
	        android:layout_toRightOf="@+id/linearLayoutLatestEvents"
	        android:background="@null"
	        android:src="@drawable/btn_plus"
	        android:layout_marginLeft="15dp"
	         />
        
       <TextView
        android:id="@+id/txtInterests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp" 
        android:layout_below="@+id/linearLayoutLatestEvents"
        android:text="Interests:" />
        
		<LinearLayout
	        android:id="@+id/linearLayoutInterests"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/txtInterests"
	        android:layout_below="@+id/txtInterests"
	        android:layout_marginTop="15dp" 
	        android:orientation="horizontal"
	        >

	    </LinearLayout>
	    
        <ImageButton
	        android:id="@+id/btnPlusInterests"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/linearLayoutInterests"
	        android:layout_toRightOf="@+id/linearLayoutInterests"
	        android:background="@null"
	        android:src="@drawable/btn_plus"
	        android:layout_marginLeft="15dp"
	         />
</RelativeLayout>