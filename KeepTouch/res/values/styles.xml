<resources xmlns:android="http://schemas.android.com/apk/res/android">
	<color name="default_theme_bg_color">#383937</color>
	<color name="default_text_color">#fff</color>
	<color name="views_special_color">#888eb2</color>
	<color name="views_special_color_pressed">#595d74</color>
	<color name="views_default_color">#2a2b29</color>
	<color name="views_default_color_pressed">#787b72</color>
	
	<dimen name="default_text_size">12sp</dimen>
	<dimen name="date_text_size">30sp</dimen>
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:background">@color/default_theme_bg_color</item>
        <item name="android:textColor">@color/default_text_color</item>   
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:typeface">sans</item>
    </style>
    
    <style name="DateStyle" parent="AppTheme">
        <item name="android:textColor">@color/views_special_color</item>
        <item name="android:textSize">@dimen/date_text_size</item>
    </style>
	
    <!-- Edit text styles -->
    <style name="EditTextRoundedStyle" parent="AppTheme">
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:textSize">@dimen/default_text_size</item>
    </style>
</resources>
