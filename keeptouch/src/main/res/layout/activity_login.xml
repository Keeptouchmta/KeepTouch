<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.keeptouch.login.LoginActivity"
    tools:ignore="MergeRootFrame"
    android:clickable="true">

    <EditText
        android:id="@+id/textPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:layout_below="@+id/textEmailAddress"
        android:layout_alignRight="@+id/imageButtonLoginWithFacebok"
        android:layout_alignLeft="@+id/imageButtonLoginWithFacebok" />

    <EditText
        android:id="@+id/textEmailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="115dp"
        android:hint="@string/email"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/imageButtonLoginWithFacebok"
        android:layout_alignLeft="@+id/imageButtonLoginWithFacebok" />


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonLoginWithFacebok"
        android:maxWidth="10dp"
        android:background="@drawable/active_600"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/buttonLogin"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:id="@+id/textSignUp"
        android:layout_below="@+id/imageButtonLoginWithFacebok"
        android:layout_alignRight="@+id/textPassword"
        android:layout_alignEnd="@+id/textPassword"
        android:layout_marginTop="37dp"
        android:textSize="15dp"
        android:clickable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_without_facebook"
        android:id="@+id/buttonLogin"
        android:layout_alignEnd="@id/imageButtonLoginWithFacebok"
        android:clickable="true"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/imageButtonLoginWithFacebok" />

</RelativeLayout>

