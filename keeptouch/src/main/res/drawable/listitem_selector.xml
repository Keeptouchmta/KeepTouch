<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Normal state. -->
    <item android:state_pressed="false" android:state_selected="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:startColor="@color/light_purple" android:centerColor="@color/light_purple" android:endColor="@color/white" android:angle="90" />
            <corners android:radius="0dp" />
        </shape>
    </item>
    <!-- pressed state. -->
    <item android:drawable="@color/white" android:state_pressed="true" />
    <!-- Selected state. -->
    <item android:drawable="@color/white" android:state_pressed="false" android:state_activated="true"></item>
</selector>